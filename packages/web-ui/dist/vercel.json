{
  "version": 2,
  "builds": [
    {
      "src": "packages/web-ui/dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // 1) Serve any existing file
    { "handle": "filesystem" },
    // 2) Rewrite everything else to index.html
    {
      "src": "/(.*)",
      "dest": "/packages/web-ui/dist/index.html"
    }
  ]
}
